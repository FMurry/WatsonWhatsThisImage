<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="xyz.fmsoft.watsonimagerecognition.MainActivity">

    <TextView
        android:id="@+id/main_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Take A Photo!"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/main_yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Yes"
        android:layout_below="@id/main_response"/>
    <Button
        android:id="@+id/main_no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="No"
        android:layout_below="@id/main_response"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/main_photo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_photo_camera_white_48dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_gallery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_photo_white_48dp"/>
    <TextView
        android:id="@+id/main_json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show me the info"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
